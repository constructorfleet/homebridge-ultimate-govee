{
  "pluginAlias": "Govee Ultimate",
  "pluginType": "platform",
  "platform": "homebridge-ultimate-govee",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "featureFlags": {
        "type": "array",
        "default": [],
        "items": {
          "type": "string"
        },
        "condition": {
          "functionBody": "return model !== undefined && model['_version'] === undefined && model['credentials'] === undefined;"
        }
      },
      "username": {
        "type": "string",
        "title": "Govee Account E-Email Address",
        "required": false,
        "condition": {
          "functionBody": "return model !== undefined && model['_version'] === undefined && model['credentials'] === undefined;"
        }
      },
      "password": {
        "type": "string",
        "title": "Govee Account Password",
