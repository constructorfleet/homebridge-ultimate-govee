{
  "pluginAlias": "Govee Ultimate",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "version": {
        "type": "number"
      },
      "credentials": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "title": "Govee Account E-Email Address",
            "required": true
          },
          "password": {
            "type": "string",
            "title": "Govee Account Password",
            "required": true
          },
          "apiKey": {
            "type": "string",
            "title": "Govee Developer API Key",
            "required": false
          }
        }
      },
      "controlChannels": {
        "type": "object",
        "properties": {
          "ble": {
            "type": "boolean",
            "default": false,
            "title": "BLE Control"
          },
          "iot": {
            "type": "boolean",
            "default": true,
            "title": "AWS IoT Control"
          }
        }
      },
      "deviceConfigs": {
        "type": "array",
        "removeable": false,
        "addable": false,
        "items": {
          "type": "object",
          "properties": {
            "_type": {
              "type": "string"
            },
            "id": {
              "type": "string",
              "title": "Device ID"
            },
            "name": {
              "type": "string",
              "title": "Name Override"
            },
            "debug": {
              "type": "boolean",
              "title": "Enable Debug",
              "default": false
            },
            "ignore": {
              "type": "boolean",
              "title": "Ignore Device",
              "default": false
            },
            "exposePrevious": {
              "type": "boolean",
              "title": "Expose Previous Button",
              "default": false
            },
            "showSegments": {
              "type": "boolean",
              "title": "Show Each Segment",
              "default": false,
              "condition": {
                "functionBody": "return model.deviceConfigs[arrayIndices]._type === 'rgbic';"
              }
            },
            "effects": {
              "type": "array",
              "removeable": false,
              "addable": false,
              "expandable": true,
              "expanded": false,
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "title": "Effect Name"
                  },
                  "code": {
                    "type": "hidden",
                    "title": "Effect Code"
                  },
                  "enabled": {
                    "type": "boolean",
                    "title": "Enable Light Effect",
                    "default": false
                  }
                }
              },
              "condition": {
                "functionBody": "return model.deviceConfigs[arrayIndices]._type !== 'device;"
              }
            }
          },
          "condition": {
            "functionBody": "return model && model.deviceConfigs && model.deviceConfigs.length > 0 model.deviceConfigs[arrayIndices];"
          }
        }
      }
    }
  }
}
