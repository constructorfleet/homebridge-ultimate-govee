            "type": "boolean",
            "default": true
          },
          "ble": {
            "title": "Enable Bluetooth LE",
            "type": "boolean",
            "default": false
          },
          "api": {
            "title": "Enable API",
            "type": "boolean",
            "default": true
          }
        },
        "required": false,
        "condition": {
          "functionBody": "return model !== undefined && model['_version'] === undefined && model['credentials'] === undefined;"
        }
      },
      "devices": {
