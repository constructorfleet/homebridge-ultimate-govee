        "type": "object",
        "properties": {
          "airPurifiers": {
            "type": "array",
            "removeable": false,
            "addable": false,
            "items": {
              "type": "object",
              "condition": {
                "functionBody": "return (model.devices.airPurifiers && model.devices.airPurifiers[arrayIndices] && model.devices.airPurifiers[arrayIndices].deviceId && model.devices.airPurifiers[arrayIndices].model);"
              },
              "properties": {
                "deviceId": {
                  "title": "Govee Device ID",
                  "type": "string",
                  "readonly": true
                },
                "model": {
                  "title": "Model",
                  "type": "string",
                  "readonly": true
                },
                "ignore": {
                  "title": "Ignore Device",
                  "type": "boolean"
                },
                "displayName": {
                  "title": "Display Name",
                  "type": "string"
                }
              }
            }
          },
          "humidifiers": {
            "title": "Humidifier Overrides",
            "type": "array",
            "removeable": false,
            "addable": false,
            "items": {
              "type": "object",
              "condition": {
                "functionBody": "return (model.devices.humidifiers && model.devices.humidifiers[arrayIndices] && model.devices.humidifiers[arrayIndices].deviceId && model.devices.humidifiers[arrayIndices].model);"
              },
              "properties": {
                "deviceId": {
                  "title": "Govee Device ID",
                  "type": "string",
                  "readonly": true
                },
                "model": {
                  "title": "Govee Device Model",
                  "type": "string",
                  "readonly": true
                },
                "ignore": {
                  "title": "Ignore Device",
                  "type": "boolean"
                },
                "displayName": {
                  "title": "Display Name",
                  "type": "string"
                }
              }
            }
          },
          "lights": {
            "title": "Light Overrides",
            "type": "array",
            "removeable": false,
            "addable": false,
            "items": {
              "type": "object",
              "condition": {
                "functionBody": "return (model.devices.lights && model.devices.lights[arrayIndices] && model.devices.lights[arrayIndices].deviceId && model.devices.lights[arrayIndices].model);"
              },
              "properties": {
                "deviceId": {
                  "title": "Govee Device ID",
                  "type": "string",
                  "readonly": true
                },
                "model": {
                  "title": "Govee Device Model",
                  "type": "string",
                  "readonly": true
                },
                "ignore": {
                  "title": "Ignore Device",
                  "type": "boolean"
                },
                "displayName": {
                  "title": "Display Name",
                  "type": "string"
                },
                "_lightType": {
                  "type": "string"
                },
                "hideSegments": {
                  "title": "Hide Segment Controls",
                  "type": "boolean",
                  "default": true
                },
                "effects": {
                  "title": "Device Scenes",
                  "type": "array",
                  "removeable": false,
                  "addable": false,
                  "default": [],
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number",
                        "default": 0,
                        "readonly": true
                      },
                      "name": {
                        "type": "string",
                        "default": "",
                        "readonly": true
                      },
                      "description": {
                        "type": "string",
                        "default": "",
                        "readonly": true
                      },
                      "enabled": {
                        "type": "boolean",
                        "default": false
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "required": false,
        "condition": {
          "functionBody": "return model !== undefined && model['_version'] === undefined && model['credentials'] === undefined;"
        }
      },
      "version": {
        "type": "hidden",
        "default": 2
      },
      "credentials": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "title": "Govee Account E-Email Address",
            "required": true
          },
          "password": {
            "type": "string",
            "title": "Govee Account Password",
            "required": true
          },
          "apiKey": {
            "type": "string",
            "title": "Govee Developer API Key",
            "required": false
          }
        },
        "condition": {
          "functionBody": "return model === undefined || model['_version'] === 2 || model['credentials'] !== undefined;"
        }
      },
      "controlChannels": {
        "type": "object",
        "properties": {
          "ble": {
            "type": "boolean",
            "default": false,
            "title": "BLE Control"
          },
          "iot": {
            "type": "boolean",
            "default": true,
            "title": "AWS IoT Control"
          }
        },
        "condition": {
          "functionBody": "return model === undefined || model['_version'] === 2 || model['credentials'] !== undefined;"
        }
      }
    }
